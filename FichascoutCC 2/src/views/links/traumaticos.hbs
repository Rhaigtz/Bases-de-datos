<div class="container p-4">
    <div class="col">
        <div class="card text-center">
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <div class="row p-4 justify-content-center">
                        <h2 align="center">Traumatismos Unidad </h2>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
            <div class="row p-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th colspan="1">Nombre</th>
                            <th colspan="1">RUT</th>
                            <th colspan="2">Lista Intolerancias</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each tra}}
                        <tr>
                            <td colspan="1" class="table-success">{{nombre}} </td>
                            <td colspan="1" class="table-warning">{{rut}}</td>
                            <td colspan="2" class="table-info">{{especifique}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>