{{#each links}}
<div class="container p-4">
    <div class="col">
        <div class="card text-center">
            <div class="row">
                <div class="col-md-2">
                    <div class="p-3">
                        <img src="/img/saludlogo.jpg" alt="Logo Unidad" width="100" height="100"  />
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row p-4 justify-content-center">
                        <h5 align="center">ASOCIACION DE GU√çAS Y SCOUTS DE CHILE - COMISION DE SALUD</h5>
                    </div>
                    <div class="row justify-content-center">
                        <h5 class="text-center">Ficha Medica</h5>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
            <div class="row p-4">
                <table class="table table-bordered">
                    <tbody>
                        <tr class="table-active">
                            <td colspan="4">Informacion Medica</th>
                        </tr>
                        <tr>
                            <td colspan="2">Nombre: {{nombre}} {{apellido}}</td>
                            <td colspan="2">RUT: {{rut}}</td>
                        </tr>
                        <tr>
                            <td>Fecha Nacimiento: {{fecha_nac}}</td>
                            <td>Lugar de Nacimiento: {{lugar_nac}}</td>
                            <td>Estatura: {{estatura}}</td>
                            <td>Peso: {{peso}}</td>
                        </tr>
                        <tr>
                            <td colspan="1">Grupo: {{grupo}}</td>
                            <td colspan="1">Unidad:{{unidad}}</td>
                            <td colspan="2">Distrito: {{distrito}}</td>
                        </tr>
                        <tr>
                            <td colspan="2">En caso de emergencia comunicarse con: {{nombre_tel_eme}}</td>
                            <td colspan="2">Telefono: {{telefono_eme}}</td>
                        </tr>
                        <tr>
                            <td colspan="2">Prevision: {{prevision}}</td>
                            <td colspan="2">Grupo de Prevision: {{grupo_prevision}}</td>
                        </tr>
                        <tr>
                            <td colspan="2">Seguro Complementario Salud o Escolar: {{seguro}}</td>
                            <td colspan="2">Institucion: {{institucion}}</td>
                        </tr>
                        <tr>
                            <td colspan="2">Contacto Medico: {{nombre_medi}}</td>
                            <td colspan="2">Telefono Medico: {{contacto_medi}}</td>
                        </tr>
                        <tr>
                            <td colspan="2">Fecha Ultimo Control Dental: {{fecha_u_cd}}</td>
                            <td colspan="2">Grupo Sanguineo o Factor RH: {{sangre}}</td>
                        </tr>
                        <tr>
                            <td colspan="1">Embarazo: {{si}}</td>
                            <td colspan="1">Tiempo en Semanas: {{semanas}}</td>
                            <td colspan="1">Embarazo Anterior: {{telefono_eme}}</td>
                            <td colspan="1">Fecha Ultima Regla: {{fur}}</td>
                        </tr>
{{/each}}
{{#each medi}}
                        <tr class="table-active">
                            <td colspan="4">Medicamentos o Dispocitivos Medicos, indique dosis y horarios</th>
                        </tr>
                        <tr>
                            <td colspan="4">Especificacion: {{especifique}}</td>
                        </tr>
{{else}}
{{/each}}
{{#each ale}}
                        <tr>
                            <td colspan="1" class="table-info" >Alergias</th>
                            <td colspan="1">Tipo: {{opcion}}</td>
                            <td colspan="2">Especificacion: {{especifique}}</td>
                        </tr>
{{else}}
{{/each}}
{{#each int}}
                        <tr>
                            <td colspan="1" class="table-warning">{{tipo}}</th>
                            <td colspan="1">Tipo: {{opcion}}</td>
                            <td colspan="2">Especificacion: {{especifique}}</td>
                        </tr>
{{else}}
{{/each}}
{{#each enf}}
                        <tr>
                            <td colspan="1" class="table-success">{{tipo}}</th>
                            <td colspan="1">Tipo: {{opcion}}</td>
                            <td colspan="3">Especificacion: {{especifique}}</td>
                        </tr>
{{else}}
{{/each}}
{{#each tra}}
                        <tr>
                            <td colspan="1" class="table-active">{{tipo}}</th>
                            <td colspan="1">Tipo: {{opcion}}</td>
                            <td colspan="3">Especificacion: {{especifique}}</td>
                        </tr>
{{else}}
{{/each}}
{{#each psi}}
                        <tr>
                            <td colspan="1" class="table-primary">{{tipo}}</th>
                            <td colspan="1">Tipo: {{opcion}}</td>
                            <td colspan="3">Especificacion: {{especifique}}</td>
                        </tr>
{{else}}
{{/each}}
{{#each ope}}
                        <tr>
                            <td colspan="1" class="table-danger">Haz tenido una: {{opcion}}</td>
                            <td colspan="3">Especificacion: {{especifique}}</td>
                        </tr>
{{else}}
{{/each}}
{{#each con}}
                        <tr>
                            <td colspan="1" class="table-warning">{{tipo}}</th>
                            <td colspan="1">Tipo: {{opcion}}</td>
                            <td colspan="3">Especificacion: {{especifique}}</td>
                        </tr>
{{else}}
{{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
