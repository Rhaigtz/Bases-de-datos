{{#each editandoM}}
<div class="container p-4">
    <div class="row"> 
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editMedica/{{rut}}" method="POST">
                        <div class="container">
                            <div class="row">
                                <div class="col form-group">
                                    <label for="opcion">Tipo de Sangre</label>
                                    <select class="form-control" id="opcion" name="sangre">
                                        <option>RH Positivo</option>
                                        <option>RH Negativo</option>
                                    </select>    
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Grupo de Sangre</label>
                                    <select class="form-control" id="opcion" name="sangregrupo">
                                        <option>A</option>
                                        <option>B</option>
                                        <option>AB</option>
                                        <option>0</option>
                                    </select>    
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Prevision</label>
                                    <select class="form-control" id="opcion" name="prevision">
                                        <option>Fonasa</option>
                                        <option>Isapre</option>
                                        <option>FFAA</option>
                                    </select>    
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Grupo de Prevision</label>
                                    <select class="form-control" id="opcion" name="grupo_prevision">
                                        <optgroup label="Fonaza">
                                            <option>A</option>
                                            <option>B</option>
                                            <option>C</option>
                                            <option>D</option>
                                        </optgroup>
                                        <optgroup label="Isapre">
                                            <option>Banmédica S.A.</option>
                                            <option>Chuquicamata Ltda.</option>
                                            <option>Colmena Golden Cross S.A.</option>
                                            <option>Consalud S.A</option>
                                            <option>Cruz Blanca S.A.</option>
                                            <option>Cruz del Norte Ltda.</option>
                                            <option>Nueva Masvida S.A.</option>
                                            <option>Fundación Ltda.</option>
                                            <option>Fusat Ltda.</option>
                                            <option>Río Blanco Ltda.</option>
                                            <option>San Lorenzo Ltda.</option>
                                            <option>Vida Tres S.A.</option>
                                        </optgroup>
                                        <optgroup label="FF.AA.">
                                            <option>DIPRECA</option>
                                            <option>CAPRADENA</option>
                                        </optgroup>
                                    </select>    
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col form-group">
                                    <label for="opcion">Tu Estatura</label>
                                    <input type="text" value="{{estatura}}" name="estatura" class="form-control" placeholder="EJ: 1.72">
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Tu peso en KG</label>
                                    <input type="text" value="{{peso}}" name="peso" class="form-control" placeholder="EJ: 78.9">
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Nombre Telefono de Emergencia</label>
                                    <input type="text" value="{{nombre_tel_eme}}" name="nombre_tel_eme" class="form-control" placeholder="Ej: Tus padres o Familiar">
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Telefono de Emergencia</label>
                                    <input type="text" value="{{telefono_eme}}" name="telefono_eme" class="form-control" placeholder="EJ: +56969065588">
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col form-group">
                                    <label for="opcion">Seguro</label>
                                    <input type="text" value="{{seguro}}" name="seguro" class="form-control" placeholder="Ej: Scout">
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Intitucion perteneciente</label>
                                    <input type="text" value="{{institucion}}" name="institucion" class="form-control" placeholder="Ej: Colegio Menecianos">
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Fecha Ultimo Control Dental</label>
                                    <input type="text" value="{{fecha_u_cd}}" name="fecha_u_cd" class="form-control" placeholder="Ej: YYYY-MM-DD">
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col form-group">
                                    <label for="opcion">Nombre de tu medico</label>
                                    <input type="text" value="{{nombre_medi}}" name="nombre_medi" class="form-control" placeholder="Ej: Dr Tulio">
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Numero de tu doctor</label>
                                    <input type="text" value="{{contacto_medi}}" name="contacto_medi" class="form-control" placeholder="Ej: +5698318454">
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">A que Consultorio Perteneces?</label>
                                    <input type="text" value="{{consultorio}}" name="consultorio" class="form-control" placeholder="Ej: Elgueta">
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col form-group">
                                    <label for="opcion">Tienes Embarazo?</label>
                                    <select class="form-control" id="opcion" name="embarazada">
                                        <option>NO</option>
                                        <option>SI</option>
                                    </select> 
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Semanas de Embarazo</label>
                                    <select class="form-control" id="opcion" name="semanas">
                                        <option>NO</option> <option>1</option> <option>2</option> <option>3</option> <option>4</option> <option>4</option> <option>5</option> <option>6</option> <option>7</option> <option>8</option> <option>9</option> <option>10</option>
                                        <option>11</option> <option>12</option> <option>13</option> <option>14</option>  <option>15</option> <option>16</option> <option>17</option> <option>18</option> <option>19</option> <option>20</option>
                                        <option>21</option> <option>22</option> <option>23</option> <option>24</option>  <option>25</option> <option>26</option> <option>27</option> <option>28</option> <option>29</option> <option>30</option>
                                        <option>31</option> <option>32</option> <option>33</option> <option>34</option> <option>35</option> <option>36</option> <option>37</option> <option>38</option> <option>39</option> <option>40</option>
                                        <option>41</option> <option>42</option> 
                                    </select> 
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Haz tenido embarazo anteriores?</label>
                                    <select class="form-control" id="opcion" name="embarazo_ant">
                                        <option>NO</option>
                                        <option>SI</option>
                                    </select> 
                                </div>
                                <div class="col form-group">
                                    <label for="opcion">Fecha Ultima Regla</label>
                                    <input type="text" value="{{fur}}" name="fur" class="form-control" placeholder="Ej: YYYY-MM-DD">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Actualizar Ficha
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="col-md-4 mx-auto p-4">
    <div class="card card-body text-center p-4">
        <h1>No tiene Ficha medica</h1>
        <a href="/links/miunidad" class="btn btn-info btn-lg active" role="button" aria-pressed="true">Volver Atras</a>
    </div>
</div>
{{/each}}