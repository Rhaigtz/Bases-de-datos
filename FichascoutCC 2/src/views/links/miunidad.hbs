<div class="container p-4">
    <div class="col">
        <div class="col">
            <div class="card text-center">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col"><div class="h3">Rut</div></div>
                            <div class="col"><div class="h3">Nombre</div></div>
                            <div class="col"><div class="h3">Apellido</div></div>
                            <div class="col"><div class="h3">Unidad</div></div>
                            <div class="col"><div class="h3"></div></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#each links}}
        <div class="col">
            <div class="card text-center">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col">{{rut}}</div>
                            <div class="col">{{nombre}}</div>
                            <div class="col">{{apellido}}</div>
                            <div class="col">{{unidad}}</div>
                            <a class="btn btn-info" href="/links/ficha/{{rut}}">
                                Mirar Ficha
                            </a>
                            <a class="btn btn-warning" href="/links/editMedica/{{rut}}">
                                Editar Ficha
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col mx-auto">
            <div class="card card-body text-center">
                <div class="row">
                    <div class="mx-auto " align="center">
                        <h2 align="center">No eres Dirigente.....</h2>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="mx-auto">
                        <img src="/img/malandrin.jpg" alt="Logo Unidad" width="786" height="353" align="center" />
                    </div>
                    
                </div>
                <div class="row">
                    <div class="mx-auto p-3">
                        <a class="btn btn-warning" href="/profile">Volver a mi Perfil</a>
                    </div>
                    
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>