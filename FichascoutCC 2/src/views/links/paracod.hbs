{{#each links}}
<div class="container p-4">
    <div class="row">
        <div class="card text-center">
            <div class="col">
                <img src="/img/{{unidad}}.jpg" alt="Logo Unidad" class="card-img-top mx-auto m-2 w-50" />
            </div>
        </div>
    </div>
</div>
<div class="container p-4">
    <div class="col">
        <div class="col">
            <div class="card text-center">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col">{{rut}}</div>
                            <div class="col">{{nombre}}</div>
                            <div class="col">{{apellido}}</div>
                            <div class="col">{{sexo}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{poblacion}}</div>
                            <div class="col">{{calle}}</div>
                            <div class="col">{{numero_c}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{ciudad}}</div>
                            <div class="col">{{fecha_nac}}</div>
                            <div class="col">{{lugar_nac}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{unidad}}</div>
                            <div class="col">{{grupo}}</div>
                            <div class="col">{{ciudad_grupo}}</div>
                            <div class="col">{{distrito}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#if sangre}}
        <div class="col p-4">
            <div class="card text-center">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col">{{sangre}}</div>
                            <div class="col">{{alergias}}</div>
                            <div class="col">{{medicamentos}}</div>
                            <div class="col">{{intolerancia}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{enfermedad}}</div>
                            <div class="col">{{cirugias}}</div>
                            <div class="col">{{trauma}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{tra_psicologico}}</div>
                            <div class="col">{{telefono_eme}}</div>
                            <div class="col">{{nombre_tel_eme}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{estatura}}</div>
                            <div class="col">{{peso}}</div>
                            <div class="col">{{prevision}}</div>
                            <div class="col">{{seguro}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{institucion}}</div>
                            <div class="col">{{fecha_u_cd}}</div>
                            <div class="col">{{contacto_medi}}</div>
                            <div class="col">{{nombre_medi}}</div>
                            <div class="col">{{consultorio}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tiene Ficha medica</p>
                <a href="/links">Volver!</a>
            </div>
        </div>
    </div>
</div>
{{/each}}