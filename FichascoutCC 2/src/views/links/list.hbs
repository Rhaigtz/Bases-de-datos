<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col">
            <div class="card text-center">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col">{{rut}}</div>
                            <div class="col">{{nombre}}</div>
                            <div class="col">{{apellido}}</div>
                            <div class="col">{{sexo}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{poblacion}}</div>
                            <div class="col">{{calle}}</div>
                            <div class="col">{{numero_c}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{ciudad}}</div>
                            <div class="col">{{fecha_nac}}</div>
                            <div class="col">{{lugar_nac}}</div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">{{unidad}}</div>
                            <div class="col">{{grupo}}</div>
                            <div class="col">{{ciudad_grupo}}</div>
                            <div class="col">{{distrito}}</div>
                        </div>
                    </div>
                    <a class="btn btn-danger" href="/links/delete/{{rut}}">
                        Borrar Datos Personales
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{rut}}">
                        Editar Datos Personales
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <h1>No Tienes Datos Personales</h1>
                <div>
                    <img src="/img/senorx.png" width="200" height="200">
                </div>
                <div class="mx-auto p-5">
                    <a href="links/add" class="btn btn-warning btn-lg active" role="button" aria-pressed="true">Agregalos Ya!</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>